
<!-- Dashboard icons -->
<%= render :partial => 'admin/admins/menu_iconi' %>
<!-- End .grid_7 -->           

<div style="clear:both;"></div>           

<div class="grid_12">    
<!-- Button -->
<div class="bottom-spacing">     
<div class="float-right">          
<%= link_to admin_contacts_path, :class => "button"  do %>
<span>            
<%= image_tag "image-admin/plus-small.gif", :size => "12x9"  %> Novo Registro
</span>
<%  end %>             

</div>         
</div>    
<!-- fecha Button -->  

<!-- Example table -->
<div class="module">
<h2><span>Listagem de Contatos do Site</span></h2>

<div class="module-table-body">           
<table id="myTable" class="tablesorter">
<% if @contacts.present? %>
<thead>
<tr>
<th style="width:20%">Nome</th>
 <th style="width:20">Email</th>
<th style="width:45%">Assunto</th>

 <th style="width:15%">Ações</th>           

</tr>
</thead>
<tbody>
<% @contacts.each do |c| %>
<tr>

<td><%= link_to admin_contact_path(c) do %>
    <%= c.name.titleize %>
    <% end %>
</td>  
<td><%= c.email %></td>
<td><%= c.assunto %></td>
<td> 
    <%= link_to admin_contact_path(c), :title => "Visualizar contato" do  %>
      <span>            
      <%= image_tag "image-admin/pencil.gif", :size => "16x16" , alt: 'show'  %> 
     </span>
    <% end %>

                          
   
</td>
</tr>
<% end %>            

</tbody>
<% end %>
</table>         


<div class="pager" id="pager">
<%= will_paginate @contacts %>

</div>

</div> <!-- End .module-table-body -->
</div>
<!-- End .module -->           

</div>   
<!-- End .grid_12 -->

<div style="clear:both;"></div>













