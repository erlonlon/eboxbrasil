
<!-- Dashboard icons -->
<%= render :partial => 'admin/admins/menu_iconi' %>
 <!-- End .grid_7 -->           

<div style="clear:both;"></div>           

<div class="grid_12">     
    <!-- Button -->
    <div class="bottom-spacing">
      
        <div class="float-right">          
          <%= link_to new_admin_post_path, :class => "button"  do %>

            <span>            
          <%= image_tag "image-admin/plus-small.gif", :size => "12x9"  %> Novo Registro
            </span>
          <%  end %>             
          
        </div>         
    </div>    
     <!-- fecha Button -->   
    
    <!-- Example table -->
    <div class="module">
        <h2><span>Listagem de registros</span></h2>        
        <div class="module-table-body">          
            <table id="myTable" class="tablesorter">
                   <% if @posts.present? %>
                <thead>
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:15%">Data</th>
                        <th style="width:65%">TÃ­tulo</th>
                       
                        <th style="width:15%">#</th>
                    </tr>
                </thead>
                <tbody>
                    
                         <% @posts.each do |post| %>
                    <tr>
                        <td class="align-center"><%= post.id %></td>
                         <td><%= post.created_at.strftime("%d de %b de %y") %></td>
                       
                             <td><%= link_to admin_post_path(post) do %>
                            <%= post.title.titleize %>
                            <% end %>
                        </td> 
                       
                      <td> 
                          <input type="checkbox" />
                            <a href=""><img src="image-admin/tick-circle.gif" tppabs="http://www.xooom.pl/work/magicadmin/images/tick-circle.gif" width="16" height="16" alt="published" /></a>
                            <%= link_to edit_admin_post_path(post), :title => "Editar arquivo" do  %>
                              <span>            
                              <%= image_tag "image-admin/pencil.gif", :size => "16x16" , alt: 'edite'  %> 
                             </span>
                            <% end %>

                            <%= link_to  admin_post_path(post), confirm: 'Deletar arquivo, Tem certeza ?', method: :delete , :title => "Excluir arquivo" do %>
                             <span>            
                              <%= image_tag "image-admin/bin.gif", :size => "20x16"  %> 
                             </span>
                            <%end %>                          
                           
                        </td>
                       
                      
                       
                    </tr>
                 
                   <% end %>
                </tbody>
                  <% end %>
            </table>
          
            <div class="pager" id="pager">
                 <%= will_paginate @posts %>
             
            </div>
           
            <div style="clear: both"></div>
         </div> <!-- End .module-table-body -->
    </div> <!-- End .module -->
    
    
        

    
</div>
 <!-- End .grid_12 -->
<div style="clear:both;"></div>