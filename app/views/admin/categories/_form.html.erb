    <div class="module">
         <h2><span>Imagens disponiveis</span></h2>
            
         <div class="module-body">
              <%= image_tag "ebox_tranparente_branco.png", :size => "80x80" %>   <%= image_tag "ebox_tranparente_branco.png", :size => "80x80" %>   <%= image_tag "ebox_tranparente_branco.png", :size => "80x80" %>
             
            
         </div>
    </div> <!-- module -->
    <div style="clear:both;"></div>
</div> <!-- End .grid_6 -->


 

